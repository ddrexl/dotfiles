[diff]
    indentHeuristic = true
    compactionHeuristic = true
[diff "bin"]
    # Use `hexdump` to diff binary files
    textconv = hexdump -v -C
[user]
    # force user config on a per repo basis if no global user config
    useconfigonly = true

