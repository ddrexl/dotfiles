[init]
    templatedir = ~/.git_template
[push]
    default = current
[color]
    ui = auto
[alias]
    br = branch
    ca = commit --amend
    ce = commit --amend --no-edit
    ci = commit
    cl = clone
    co = checkout
    cp = cherry-pick
    df = diff
    ds = diff --staged
    l = log --branches --remotes --tags --graph --oneline --decorate
    rh = reset --hard
    st = status
    who = log --pretty=format:'%w(120, 0, 38)%C(yellow)%h%Creset %C(green)%<(15,trunc)%an%Creset %C(cyan)%<(12,trunc)%cr%Creset %C(red)%d%Creset %s'  --all

    # Show verbose output about tags, branches or remotes
    tags = tag -l
    branches = branch -a
    remotes = remote -v

    # delete fully merged branches
    dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
[core]
    excludesfile = ~/.gitignore
[fetch]
    prune = true
[include]
    path = ~/.gitconfig.local
